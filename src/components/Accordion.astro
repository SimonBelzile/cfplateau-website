---
export interface Item { title: string; content: AstroComponentFactory | string }
const { items } = Astro.props as { items: Item[] };
---
<div class="rounded-2xl border border-white/10 bg-white/5 text-white/90 divide-y divide-white/10 shadow-xl">
  {items.map((it) => (
    <details class="group open:rounded-2xl">
      <summary class="flex items-center justify-between cursor-pointer px-5 py-4 text-[15px] md:text-base font-semibold">
        <span>{it.title}</span>
        <svg class="h-4 w-4 transition-transform group-open:rotate-180 opacity-80" viewBox="0 0 20 20" fill="currentColor">
          <path d="M5.5 7.5 10 12l4.5-4.5" />
        </svg>
      </summary>
      <div class="px-5 pb-5 text-sm/relaxed text-white/75 [&_ul]:list-disc [&_ul]:pl-5">
        {typeof it.content === "string" ? <Fragment set:html={it.content} /> : <it.content />}
      </div>
    </details>
  ))}
</div>
