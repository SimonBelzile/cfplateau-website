---
interface Plan { name: string; price: string; details: string[] }
const { plans } = Astro.props as { plans: Plan[] };
---
<section class="py-6">
  <div class="grid md:grid-cols-3 gap-6">
    {plans.map(p => (
      <div class="rounded-2xl border p-6">
        <h3 class="text-xl font-semibold">{p.name}</h3>
        <p class="mt-2 text-3xl font-bold">{p.price}</p>
        <ul class="mt-4 space-y-2 text-slate-600">
          {p.details.map(d => <li>{d}</li>)}
        </ul>
        <a href="/essai" class="mt-6 inline-flex items-center rounded-xl bg-black text-white px-4 py-2">Essayer</a>
      </div>
    ))}
  </div>
</section>
