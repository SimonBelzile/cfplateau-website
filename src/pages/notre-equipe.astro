---
import Layout from "../layouts/BaseLayout.astro";
import { Image } from 'astro:assets';

// Import team photos from src/assets/team/
import simonImg from "../assets/team/simon.webp";
import jlImg from "../assets/team/jl.webp";
import jamesImg from "../assets/team/james.webp";
import raulImg from "../assets/team/raul.webp";
import felixImg from "../assets/team/felix.webp";
import suzanneImg from "../assets/team/suzanne.webp";
import micheleImg from "../assets/team/michele.webp";
import louisImg from "../assets/team/louis.webp";
import lindseyImg from "../assets/team/lindsey.webp";
import nathalieImg from "../assets/team/nathalie.webp";

const coaches = [
  { name: "Simon",    slug: "simon",    photo: simonImg,    accepting: true,  services: "CrossFit / Personal Training",  bio: "Spécialiste du mouvement et du scaling intelligent pour tous niveaux."},
  { name: "JL",       slug: "jl",       photo: jlImg,       accepting: true,  services: "CrossFit / Personal Training",  bio: "Spécialiste du mouvement et du scaling intelligent pour tous niveaux." },
  { name: "James",    slug: "james",    photo: jamesImg,    accepting: true,  services: "CrossFit / Nutrition",           bio: "Approche technique + fun. Objectif: constance et sécurité." },
  { name: "Raul",     slug: "raul",     photo: raulImg,     accepting: true,  services: "HIIT/SWEAT / CrossFit",          bio: "Séances dynamiques, focus cardio & capacité de travail." },
  { name: "Félix",    slug: "felix",    photo: felixImg,    accepting: false, services: "Force / CrossFit",               bio: "Cycles force & haltéro, progression structurée." },
  { name: "Suzanne",  slug: "suzanne",  photo: suzanneImg,  accepting: true,  services: "Gym / CrossFit",                 bio: "Gymnastique accessible et efficiente, de l’initiation aux kipping." },
  { name: "Michèle",  slug: "michele",  photo: micheleImg,  accepting: true,  services: "HIIT/SWEAT",                      bio: "Coaching énergique et bienveillant, toujours avec le sourire." },
  { name: "Louis",    slug: "louis",    photo: louisImg,    accepting: true,  services: "Haltéro / PT",                    bio: "Technique d’haltéro propre, transfert vers le WOD." },
  { name: "Lindsey",  slug: "lindsey",  photo: lindseyImg,  accepting: true,  services: "CrossFit / PT",                   bio: "Encadrement précis, progression durable et motivante." },
  { name: "Nathalie", slug: "nathalie", photo: nathalieImg, accepting: false, services: " ",                                bio: "Directrice." },
];
---

<Layout title="Notre équipe — Abattoir CrossFit Plateau">
  <section class="mx-auto max-w-[1200px] bg-white text-black rounded-2xl border px-6 md:px-10 py-10 md:py-14">
    <h1 class="sr-only">Notre équipe</h1>

    <div class="grid gap-x-12 gap-y-20 md:grid-cols-2 lg:grid-cols-3">
      {coaches.map((c) => (
        <article class="group">
          <a href={`/notre-equipe#${c.slug}`} class="block overflow-hidden">
            <Image
              src={c.photo}
              alt={c.name}
              class="w-full aspect-square object-cover grayscale contrast-125"
              widths={[320, 480, 640, 768, 960]}
              sizes="(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw"
              loading="lazy"
              format="webp"
            />
          </a>

          <h2 class="mt-6 text-[28px] md:text-[30px] font-extrabold tracking-tight uppercase">{c.name}</h2>

          <details id={c.slug} class="border-b border-black/20 pb-3 mt-3">
            <summary class="list-none flex items-center justify-between gap-4 cursor-pointer select-none">
              <span class="underline underline-offset-4 decoration-black/40">Meet {c.name}</span>
              <span class="relative inline-flex h-5 w-5 items-center justify-center">
                <span class="absolute h-[2px] w-4 bg-black transition-transform duration-200 group-open:rotate-90"></span>
                <span class="absolute h-4 w-[2px] bg-black"></span>
              </span>
            </summary>
            <p class="mt-3 text-[15px] leading-relaxed text-black/80">{c.bio}</p>
          </details>

          <div class="mt-4 text-[15px] space-y-1">
            <p class="text-black">{c.accepting ? "Accepting New Clients:" : "Currently Full:"}</p>
            <p class="text-black/80">{c.services}</p>
          </div>
        </article>
      ))}
    </div>
  </section>
</Layout>
