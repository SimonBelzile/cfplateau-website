---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// getStaticPaths: génère toutes les pages /blog/mon-slug/
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((p) => ({
    params: { slug: p.slug },
    props: { post: p },
  }));
}

const { post } = Astro.props as { post: any };

// ⬇️ Récupère le composant `Content` pour rendre le Markdown
const { Content } = await post.render();
---
<BaseLayout title={`${post.data.title} — Abattoir CrossFit Plateau`} description={post.data.description}>
  <article class="max-w-3xl mx-auto">
    <header class="mb-6">
      <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight">{post.data.title}</h1>
      <p class="mt-2 text-white/70">
        Publié le {post.data.pubDate.toLocaleDateString('fr-CA')}
        {post.data.updatedDate && <span> · Mis à jour le {post.data.updatedDate.toLocaleDateString('fr-CA')}</span>}
      </p>
      {post.data.heroImage && (
        <img src={post.data.heroImage} alt="" class="mt-6 w-full max-h-[460px] object-cover rounded-2xl" />
      )}
    </header>

    <div class="prose prose-invert max-w-none
            text-white/90
            prose-headings:text-white
            prose-strong:text-white
            prose-a:text-[#ddb669] hover:prose-a:opacity-80">
      <Content />
    </div>

    {post.data.tags?.length > 0 && (
      <div class="mt-8 flex flex-wrap gap-2">
        {post.data.tags.map((t) => (
          <a href={`/tag/${encodeURIComponent(t)}/`} class="rounded-full border px-3 py-1 text-xs"
             style="border-color:#ddb669; color:#ddb669">#{t}</a>
        ))}
      </div>
    )}
  </article>
</BaseLayout>
