---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Accordion from "@/components/Accordion.astro";

const title = "CrossFit";
const desc  = "Le CrossFit sous sa forme classique : variation, intensité, mouvements fonctionnels.";

const horaires = `
<ul>
  <li>Lundi : 6h30, 12h00, 18h00</li>
  <li>Mercredi : 6h30, 18h00</li>
  <li>Jeudi : 6h30, 17h30</li>
</ul>`;
const essai = `<p>Premier cours ? <a href="/comment-debuter">Commence ici</a> ou <a href="/contact">écris-nous</a>.</p>`;
---
<BaseLayout title={`${title} — Abattoir CrossFit Plateau`} description={desc}>
  <!-- HERO full-bleed -->
  <section class="relative max-w-6xl mx-auto px-4 pt-6 md:pt-10">
    <div class="relative overflow-hidden rounded-3xl">
      <img src="/images/placeholder-crossfit-hero.webp" alt=""
           class="w-full h-[280px] md:h-[420px] object-cover" />
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
      <div class="absolute bottom-0 left-0 p-6 md:p-8">
        <h1 class="text-3xl md:text-5xl font-extrabold tracking-tight">CrossFit</h1>
        <p class="mt-2 text-white/80 max-w-2xl">{desc}</p>
      </div>
    </div>
  </section>

  <!-- SECTION contenu principal -->
  <section class="max-w-6xl mx-auto px-4 py-10 md:py-14">
    <div class="grid md:grid-cols-2 gap-10 lg:gap-16 items-start">
      <div class="space-y-6">
        <h2 class="text-2xl md:text-3xl font-bold">À quoi t’attendre</h2>
        <p class="text-white/75">Des séances structurées qui développent capacité cardio, force et coordination.</p>
        <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
          <ul class="list-disc pl-5 space-y-2 text-white/85">
            <li>Échauffement général puis ciblé</li>
            <li>Bloc technique <em>(skill work)</em></li>
            <li>Metcon / WOD (intensité adaptée)</li>
            <li>Retour au calme & mobilité</li>
          </ul>
        </div>
      </div>

      <div class="grid gap-4">
        <img src="/images/placeholder-crossfit-1.webp" class="w-full h-56 md:h-72 object-cover rounded-2xl" alt="" />
        <div class="grid grid-cols-2 gap-4">
          <img src="/images/placeholder-crossfit-2.webp" class="h-40 object-cover rounded-2xl w-full" alt="" />
          <img src="/images/placeholder-crossfit-3.webp" class="h-40 object-cover rounded-2xl w-full" alt="" />
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION infos pratiques avec accordion + photo -->
  <section class="max-w-6xl mx-auto px-4 pb-14 md:pb-20">
    <div class="grid md:grid-cols-2 gap-10 lg:gap-16 items-start">
      <Accordion items={[
        { title: "Nos cours", content: `<ul>
          <li>CrossFit</li><li>Hyrox</li><li>Sweat / HIIT</li><li>Introduction au CrossFit</li>
        </ul>` },
        { title: "Horaires", content: horaires },
        { title: "Essai", content: essai },
      ]}/>
      <img src="/images/placeholder-crossfit-4.webp" class="w-full h-72 md:h-80 object-cover rounded-2xl" alt="" />
    </div>
  </section>
</BaseLayout>
